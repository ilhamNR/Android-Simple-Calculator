<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator"
        android:textSize="30dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inputkan Bilangan pertama :"
        />
        <EditText
            android:id="@+id/bil1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inputkan Bilangan Kedua :    "
            />
        <EditText
            android:id="@+id/bil2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output Hasil :                          "
            />
        <EditText
            android:id="@+id/hasil"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <Button
        android:id="@+id/tblHitungPenjumlahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Penjumlahan"
        android:layout_gravity="center"
        android:onClick="Pemjumlahan"
        />
    <Button
        android:id="@+id/tblHitungPerkalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Perkalian"
        android:layout_gravity="center"
        android:onClick="Perkalian"
        />
    <Button
        android:id="@+id/tblHitungPengurangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Pengurangan"
        android:layout_gravity="center"
        android:onClick="Pengurangan"
        />
    <Button
        android:id="@+id/tblHitungPembagian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Pembagian"
        android:layout_gravity="center"
        android:onClick="Pembagian"
        />



</LinearLayout>